---
import BaseLayout from './BaseLayout.astro';

interface Props {
    title: string;
    lessonNumber: number;
    totalSlides?: number;
}

const { title, lessonNumber, totalSlides = 1 } = Astro.props;
---

<BaseLayout title={`${lessonNumber}차시: ${title}`}>
    <!-- 네비게이션 바 -->
    <nav class="nav-bar">
        <div class="nav-bar-content">
            <!-- 왼쪽: 홈 버튼 + 레슨 정보 -->
            <div class="flex items-center gap-4">
                <a href="/" class="btn-nav" title="홈으로">
                    <span class="material-symbols-outlined">home</span>
                </a>
                <div class="lesson-badge">{lessonNumber}</div>
                <div>
                    <div class="text-sm text-gray-500">{lessonNumber}차시</div>
                    <div class="font-bold text-ink-deep">{title}</div>
                </div>
            </div>

            <!-- 오른쪽: 네비게이션 컨트롤 -->
            <div class="nav-controls">
                <div class="slide-indicator" id="slide-indicator">
                    <span id="current-slide">1</span> / <span id="total-slides">{totalSlides}</span>
                </div>
                <div class="nav-buttons">
                    <button class="btn-nav" id="btn-prev" disabled>
                        <span class="material-symbols-outlined">chevron_left</span>
                    </button>
                    <button class="btn-nav primary" id="btn-next">
                        <span class="material-symbols-outlined">chevron_right</span>
                    </button>
                </div>
                <button class="btn-fullscreen" id="btn-fullscreen" title="전체화면">
                    <span class="material-symbols-outlined icon-expand">fullscreen</span>
                    <span class="material-symbols-outlined icon-collapse">fullscreen_exit</span>
                </button>
            </div>
        </div>

        <!-- 진행률 바 -->
        <div class="progress-bar">
            <div id="progress-fill" style="width: 0%"></div>
        </div>
    </nav>

    <!-- 슬라이드 컨테이너 -->
    <main id="slide-container">
        <slot />
    </main>

    <!-- 슬라이드 네비게이션 스크립트 -->
    <script define:vars={{ totalSlides }}>
        let currentSlide = 1;
        const total = totalSlides;

        const slides = document.querySelectorAll('.slide');
        const prevBtn = document.getElementById('btn-prev');
        const nextBtn = document.getElementById('btn-next');
        const currentEl = document.getElementById('current-slide');
        const progressFill = document.getElementById('progress-fill');
        const fullscreenBtn = document.getElementById('btn-fullscreen');

        function updateSlide() {
            slides.forEach((slide, i) => {
                slide.classList.toggle('active', i === currentSlide - 1);
            });

            currentEl.textContent = currentSlide;
            prevBtn.disabled = currentSlide === 1;
            nextBtn.disabled = currentSlide === total;

            const progress = ((currentSlide - 1) / (total - 1)) * 100;
            progressFill.style.width = `${progress}%`;
        }

        function changeSlide(delta) {
            const newSlide = currentSlide + delta;
            if (newSlide >= 1 && newSlide <= total) {
                currentSlide = newSlide;
                updateSlide();
            }
        }

        prevBtn?.addEventListener('click', () => changeSlide(-1));
        nextBtn?.addEventListener('click', () => changeSlide(1));

        // 전체화면
        fullscreenBtn?.addEventListener('click', () => {
            if (!document.fullscreenElement) {
                document.documentElement.requestFullscreen();
                document.body.classList.add('is-fullscreen');
            } else {
                document.exitFullscreen();
                document.body.classList.remove('is-fullscreen');
            }
        });

        document.addEventListener('fullscreenchange', () => {
            document.body.classList.toggle('is-fullscreen', !!document.fullscreenElement);
        });

        // 초기화
        updateSlide();
    </script>

    <style is:global>
        /* 레슨 페이지에서 body 스크롤 방지 */
        body {
            overflow: hidden;
        }

        .nav-bar {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            z-index: 50;
            background: rgba(255,255,255,0.9);
            backdrop-filter: blur(20px);
            -webkit-backdrop-filter: blur(20px);
            border-bottom: 1px solid rgba(0,0,0,0.05);
        }

        .nav-bar-content {
            max-width: 80rem;
            margin: 0 auto;
            padding: 0.75rem 1.5rem;
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

        .lesson-badge {
            width: 44px;
            height: 44px;
            border-radius: 14px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-weight: bold;
            font-size: 1.125rem;
            background: linear-gradient(135deg, var(--ink-deep) 0%, var(--ink-medium) 100%);
            box-shadow: var(--shadow-card);
        }

        .nav-controls {
            display: flex;
            align-items: center;
            gap: 1rem;
        }

        .nav-buttons {
            display: flex;
            gap: 0.5rem;
        }

        .btn-nav {
            width: 40px;
            height: 40px;
            padding: 0;
            border-radius: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
            border: 2px solid var(--ink-pale);
            background: white;
            cursor: pointer;
            transition: all 0.15s;
            box-shadow: var(--shadow-subtle);
        }
        .btn-nav:hover:not(:disabled) {
            border-color: var(--neon-sky);
            transform: translateY(-2px);
        }
        .btn-nav:disabled {
            opacity: 0.3;
            cursor: not-allowed;
        }
        .btn-nav.primary {
            background: var(--ink-deep);
            border-color: var(--ink-deep);
            color: white;
        }

        .btn-fullscreen {
            width: 40px;
            height: 40px;
            padding: 0;
            border-radius: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
            border: 2px solid var(--ink-pale);
            background: white;
            cursor: pointer;
            transition: all 0.15s;
        }
        .btn-fullscreen:hover {
            border-color: var(--neon-gold);
            background: rgba(255,217,61,0.1);
        }
        .btn-fullscreen .icon-collapse { display: none; }
        body.is-fullscreen .btn-fullscreen .icon-collapse { display: block; }
        body.is-fullscreen .btn-fullscreen .icon-expand { display: none; }

        .slide-indicator {
            font-size: 0.875rem;
            font-weight: 500;
            padding: 0.5rem 1rem;
            border-radius: 100px;
            background: var(--ink-pale);
            color: var(--ink-light);
        }

        .progress-bar {
            height: 3px;
            background: var(--ink-pale);
        }
        .progress-bar > div {
            height: 100%;
            background: linear-gradient(90deg, var(--neon-sky), var(--neon-mint));
            transition: width 0.3s ease-out;
        }

        /* 슬라이드 컨테이너 */
        #slide-container {
            position: relative;
            height: 100vh;
            overflow: hidden;
        }

        /* 슬라이드 */
        .slide {
            display: none;
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100vh;
            padding-top: 80px;
            flex-direction: column;
            overflow-y: auto;
            background: var(--ink-cream);
        }
        .slide.active {
            display: flex;
            z-index: 10;
            animation: slideUp 0.4s ease-out;
        }

        @keyframes slideUp {
            from { opacity: 0; transform: translateY(20px); }
            to { opacity: 1; transform: translateY(0); }
        }

        /* 전체화면 */
        body.is-fullscreen {
            background: var(--ink-cream);
        }
    </style>
</BaseLayout>
